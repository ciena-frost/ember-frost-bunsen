<div>
  <div class={{labelWrapperClassName}}>
    <label class="alias">{{renderLabel}}</label>
    {{#if required}}
      <div class='required'>Required</div>
    {{/if}}
  </div>
  <div class={{inputWrapperClassName}}>
    {{#each options as |option index|}}
      {{#frost-button
        onClick=(action "onChange" index)
        priority=(if (eq index activeIndex) "primary" "secondary")
        size=size
      }}
        {{option}}
      {{/frost-button}}
    {{/each}}
  </div>
</div>
{{#if renderErrorMessage}}
  <div>
    <div class={{labelWrapperClassName}}></div>
    <div class="error">
      {{renderErrorMessage}}
    </div>
  </div>
{{/if}}
