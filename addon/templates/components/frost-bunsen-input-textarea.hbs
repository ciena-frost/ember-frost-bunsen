<label class={{labelWrapperClassName}}>
  {{renderLabel}}
  {{#if showRequiredLabel}}
    <div class='required'>Required</div>
  {{/if}}
</label>
<div class={{inputWrapperClassName}}>
  {{frost-textarea
    class=valueClassName
    cols=cellConfig.renderer.cols
    disabled=disabled
    hook=hook
    onBlur=(action 'showErrorMessage')
    onFocus=(action 'hideErrorMessage')
    onInput=(action 'handleChange')
    placeholder=cellConfig.placeholder
    rows=cellConfig.renderer.rows
    value=(readonly transformedValue)
  }}
  {{#if cellConfig.description}}
    {{frost-bunsen-description-bubble description=cellConfig.description}}
  {{/if}}
</div>
{{#if renderErrorMessage}}
  <div class='frost-bunsen-error'>
    {{renderErrorMessage}}
  </div>
{{/if}}
